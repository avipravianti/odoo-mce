<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Invoice Request Report -->
    <record id="action_report_invoice_request" model="ir.actions.report">
        <field name="name">Invoice Request</field>
        <field name="model">invoice.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ap_invoice_request.report_invoice_request</field>
        <field name="report_file">ap_invoice_request.report_invoice_request</field>
        <field name="binding_model_id" ref="model_invoice_request"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_invoice_request">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Invoice Request #<span t-field="doc.id"/></h2>
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Customer:</strong> <span t-field="doc.partner_id"/>
                            </div>
                            <div class="col-6">
                                <strong>Status:</strong> <span t-field="doc.state"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <strong>Sales Order:</strong> <span t-field="doc.sale_id"/>
                            </div>
                            <div class="col-6">
                                <strong>Request Date:</strong> <span t-field="doc.request_date"/>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-6">
                                <t t-if="doc.invoice_id">
                                    <strong>Invoice:</strong> <span t-field="doc.invoice_id"/>
                                </t>
                            </div>
                            <div class="col-6">
                                <t t-if="doc.processing_date">
                                    <strong>Processed on:</strong> <span t-field="doc.processing_date"/>
                                </t>
                            </div>
                        </div>

                        <t t-if="doc.invoice_id">
                            <h3>Invoice Details</h3>
                            <!-- Show invoice details -->
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-right">Quantity</th>
                                        <th class="text-right">Unit Price</th>
                                        <th class="text-right">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.invoice_id.invoice_line_ids" t-as="line">
                                        <td><span t-field="line.product_id.name"/></td>
                                        <td class="text-right"><span t-field="line.quantity"/></td>
                                        <td class="text-right"><span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": line.currency_id}'/></td>
                                        <td class="text-right"><span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": line.currency_id}'/></td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" class="text-right"><strong>Total</strong></td>
                                        <td class="text-right"><span t-field="doc.invoice_id.amount_total" t-options='{"widget": "monetary", "display_currency": doc.invoice_id.currency_id}'/></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>