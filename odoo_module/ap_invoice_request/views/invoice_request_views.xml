<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Invoice Request Tree View -->
    <record id="view_invoice_request_tree" model="ir.ui.view">
        <field name="name">invoice.request.tree</field>
        <field name="model">invoice.request</field>
        <field name="arch" type="xml">
            <tree string="Invoice Requests" decoration-info="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'">
                <field name="partner_id"/>
                <field name="sale_id"/>
                <field name="request_date"/>
                <field name="state"/>
                <field name="invoice_id"/>
            </tree>
        </field>
    </record>

    <!-- Invoice Request Form View -->
    <record id="view_invoice_request_form" model="ir.ui.view">
        <field name="name">invoice.request.form</field>
        <field name="model">invoice.request</field>
        <field name="arch" type="xml">
            <form string="Invoice Request">
                <header>
                    <button name="approve_request" type="object" string="Approve and Create Invoice" class="oe_highlight" invisible="state != 'pending'"/>

					<button name="open_external_link" type="object" string="View External Form"
						class="btn-secondary" icon="fa-external-link" invisible="state == 'pending'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
					<div class="oe_button_box" name="button_box">
						<button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-file-text-o"
							invisible="invoice_count == 0">
							<field name="invoice_count" widget="statinfo" string="Invoice"/>
						</button>
					</div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="sale_id" domain="[('partner_id', '=', partner_id), ('state', '=', 'sale'), ('invoice_status', '=', 'to invoice')]"/>
                            <field name="external_token" readonly="1" invisible="1"/>
                        </group>
                        <group>
                            <field name="request_date"/>
                            <field name="processing_date"/>
                            <field name="invoice_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Invoice Request Action -->
    <record id="action_invoice_request" model="ir.actions.act_window">
        <field name="name">Invoice Requests</field>
        <field name="res_model">invoice.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No invoice requests found
            </p>
            <p>
                Customers can request invoices from the external portal.
            </p>
        </field>
    </record>

	<menuitem id="menu_invoice_request_root"
              name="Invoice Requests"
              parent="account.menu_finance"
              sequence="5"/>

    <menuitem id="menu_invoice_request"
              name="Invoice Requests"
              parent="menu_invoice_request_root"
              action="action_invoice_request"
              sequence="10"/>
</odoo>